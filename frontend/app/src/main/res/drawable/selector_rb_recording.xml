<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:top="-2dp"
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="@color/gray3" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:top="-2dp"
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/gray5" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
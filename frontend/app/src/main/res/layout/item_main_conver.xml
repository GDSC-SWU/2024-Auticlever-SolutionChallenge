<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_circle" />

    <TextView
        android:id="@+id/tv_day1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/purpletext"
        android:textSize="12sp"
        android:textAppearance="@font/font_pretendard_regular"
        app:layout_constraintStart_toStartOf="@id/iv_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_circle"
        app:layout_constraintTop_toTopOf="@id/iv_circle"
        tools:text="Fri"/>

    <TextView
        android:id="@+id/tv_day2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/purpletext"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAppearance="@font/font_pretendard_regular"
        app:layout_constraintStart_toStartOf="@id/iv_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_circle"
        app:layout_constraintTop_toTopOf="@id/iv_circle"
        tools:text="19"/>

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textAppearance="@font/font_pretendard_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"
        app:layout_constraintStart_toEndOf="@id/iv_circle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Airplane, airplane, airplane" />

    <TextView
        android:id="@+id/tv_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="11dp"
        android:textAppearance="@font/font_pretendard_regular"
        android:textSize="14dp"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/black"
        android:background="@drawable/main_rv_memo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text1"
        tools:text="I don't answer topics I'm not nterested in." />

</androidx.constraintlayout.widget.ConstraintLayout>